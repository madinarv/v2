@model IEnumerable<Product>
    @foreach (Product product in Model)
{
    <div class="product-item mb-50">
        <div class="product-thumb">
            <a href="product-details.html">
                <img src="assets/img/product/@product.MainImage" alt="">
            </a>
        </div>
        <div class="product-content">
            <h5 class="product-name">
                <a href="product-details.html">@product.Title</a>
            </h5>
            @if (product.DiscountedPrice > 0)
            {
            <div class="price-box">
                <span class="price-regular">$@product.Price</span>
                <span class="price-old"><del>$@product.DiscountedPrice</del></span>
            </div>
            }
            else
            {
            <span class="price-regular"><del>$@product.Price</del></span>
            }
            <div class="product-action-link">
                <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                <a class="addToBasket" data-id="@product.Id" href="#" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                <a class="productModal" asp-action="ProductModal" asp-controller="Product" asp-route-id="@product.Id" data-toggle="modal" data-target="#quick_view">
                    <span data-toggle="tooltip"
                          title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                </a>
            </div>
        </div>
    </div>
}
